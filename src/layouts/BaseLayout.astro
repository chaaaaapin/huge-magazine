---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Where Innovation Meets Impact' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | HUGE Magazine</title>
    <style is:global>
      :root {
        --color-black: #0D0D0D;
        --color-white: #FAFAFA;
        --color-blue: #0066FF;
        --color-orange: #FF6B35;
        --color-purple: #5B21B6;
        --color-gray: #6B7280;
        --color-gray-light: #F3F4F6;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        color: var(--color-black);
        background: var(--color-white);
      }

      h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.2;
        letter-spacing: -0.02em;
      }

      h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
      }

      h2 {
        font-size: 2.5rem;
        margin-bottom: 0.75rem;
      }

      h3 {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
      }

      a {
        color: var(--color-blue);
        text-decoration: none;
        transition: color 0.2s;
      }

      a:hover {
        color: var(--color-purple);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="container" style="padding: 2rem 2rem;">
        <div style="display: flex; justify-content: space-between; align-items: center;">
          <a href="/" style="font-size: 2rem; font-weight: 800; color: var(--color-black); letter-spacing: -0.03em;">
            HUGE
          </a>
          <div style="display: flex; gap: 2rem;">
            <a href="/articles">Articles</a>
            <a href="/breakthroughs">Breakthroughs</a>
            <a href="/about">About</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer style="margin-top: 6rem; padding: 3rem 0; background: var(--color-gray-light);">
      <div class="container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
          <div>
            <p style="font-weight: 700; margin-bottom: 0.5rem;">HUGE Magazine</p>
            <p style="color: var(--color-gray); font-size: 0.9rem;">Where Innovation Meets Impact</p>
          </div>
          <p style="color: var(--color-gray); font-size: 0.9rem;">
            Â© {new Date().getFullYear()} HUGE Magazine
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
