---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ArticleCard from '../components/ArticleCard.astro';

// Get all articles
const allBreakthroughs = await getCollection('breakthroughs');
const allArticles = await getCollection('articles');
const allOpinions = await getCollection('opinions');
const allProfiles = await getCollection('profiles');

// Combine and sort by date
const allPosts = [...allBreakthroughs, ...allArticles, ...allOpinions, ...allProfiles]
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latestPosts = allPosts.slice(0, 10);
const featuredPost = allPosts[0];

// Helper function to get category path
function getCategoryPath(category: string): string {
  return category.toLowerCase() + 's';
}
---

<BaseLayout
  title="HUGE Magazine"
  description="Where Innovation Meets Impact. Breakthrough ideas, emerging technologies, and the innovations shaping tomorrow."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Where Innovation Meets Impact</h1>
          <p class="hero-description">
            Breakthrough ideas, emerging technologies, and the innovations shaping tomorrow.
            From AI and quantum computing to clean energy and biotech â€” we cover what's next before it's mainstream.
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Article -->
    {featuredPost && (
      <section class="featured">
        <div class="container">
          <h2 class="section-title">Featured</h2>
          <div class="featured-card">
            <a href={`/${getCategoryPath(featuredPost.data.category)}/${featuredPost.slug}/`} class="featured-link">
              {featuredPost.data.image && (
                <div class="featured-image">
                  <img src={featuredPost.data.image} alt={featuredPost.data.title} />
                </div>
              )}
              <div class="featured-content">
                <span class="featured-category">{featuredPost.data.category}</span>
                <h3 class="featured-title">{featuredPost.data.title}</h3>
                <p class="featured-description">{featuredPost.data.description}</p>
              </div>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Latest Articles -->
    <section class="latest">
      <div class="container">
        <h2 class="section-title">Latest</h2>
        <div class="articles-grid">
          {latestPosts.slice(1).map((post) => (
            <ArticleCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              image={post.data.image}
              href={`/${getCategoryPath(post.data.category)}/${post.slug}/`}
              category={post.data.category}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="newsletter-cta">
      <div class="container">
        <div class="cta-content">
          <h2>Stay Ahead of Tomorrow</h2>
          <p>Get breakthrough ideas delivered weekly. No spam, just innovation.</p>
          <form class="newsletter-form">
            <input type="email" placeholder="Enter your email" required />
            <button type="submit">Subscribe</button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero */
  .hero {
    background: linear-gradient(135deg, rgba(0, 102, 255, 0.08) 0%, rgba(91, 33, 182, 0.08) 100%);
    padding: var(--space-2xl) 0 calc(var(--space-2xl) + 1rem);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 60%;
    height: 200%;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: 4.5rem;
    font-weight: 900;
    letter-spacing: -0.04em;
    line-height: 1;
    margin-bottom: var(--space-lg);
    background: linear-gradient(135deg, var(--color-electric-blue) 0%, var(--color-deep-purple) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 12px rgba(0, 102, 255, 0.1);
  }

  .hero-description {
    font-size: 1.4rem;
    line-height: 1.6;
    color: rgba(13, 13, 13, 0.75);
    max-width: 700px;
    margin: 0 auto;
    font-weight: 400;
  }

  /* Section Title */
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--space-lg);
    color: var(--color-huge-black);
  }

  /* Featured */
  .featured {
    padding: var(--space-2xl) 0;
    background: var(--color-huge-white);
  }

  .featured-card {
    background: var(--color-huge-white);
    border: 2px solid rgba(13, 13, 13, 0.1);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(13, 13, 13, 0.05);
  }

  .featured-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 24px 48px rgba(13, 13, 13, 0.2);
    border-color: var(--color-electric-blue);
  }

  .featured-link {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    text-decoration: none;
    color: inherit;
  }

  .featured-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .featured-card:hover .featured-image img {
    transform: scale(1.08);
  }

  .featured-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .featured-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.35rem 1rem;
    border-radius: 24px;
    background: linear-gradient(135deg, var(--color-electric-blue), var(--color-cyan));
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-md);
  }

  .featured-title {
    font-size: 2.75rem;
    font-weight: 900;
    line-height: 1.15;
    margin-bottom: var(--space-md);
    color: var(--color-huge-black);
    letter-spacing: -0.03em;
  }

  .featured-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: rgba(13, 13, 13, 0.7);
  }

  /* Latest Articles */
  .latest {
    padding: var(--space-2xl) 0;
    background: rgba(0, 102, 255, 0.02);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-lg);
  }

  /* Newsletter CTA */
  .newsletter-cta {
    padding: var(--space-2xl) 0;
    background: var(--color-huge-black);
    color: var(--color-huge-white);
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: var(--space-sm);
  }

  .cta-content p {
    font-size: 1.15rem;
    color: rgba(250, 250, 250, 0.8);
    margin-bottom: var(--space-lg);
  }

  .newsletter-form {
    display: flex;
    gap: var(--space-sm);
  }

  .newsletter-form input {
    flex: 1;
    padding: var(--space-sm) var(--space-md);
    border: 2px solid rgba(250, 250, 250, 0.2);
    background: rgba(250, 250, 250, 0.05);
    color: var(--color-huge-white);
    font-size: 1rem;
    border-radius: 6px;
    outline: none;
    transition: border-color 0.2s ease;
  }

  .newsletter-form input:focus {
    border-color: var(--color-electric-blue);
  }

  .newsletter-form input::placeholder {
    color: rgba(250, 250, 250, 0.5);
  }

  .newsletter-form button {
    padding: var(--space-sm) var(--space-lg);
    background: var(--color-electric-blue);
    color: var(--color-huge-white);
    border: none;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .newsletter-form button:hover {
    background: var(--color-innovation-orange);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .featured-link {
      grid-template-columns: 1fr;
    }

    .featured-title {
      font-size: 1.75rem;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .cta-content h2 {
      font-size: 1.75rem;
    }
  }
</style>
