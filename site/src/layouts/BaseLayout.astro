---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
  ogType?: string;
  publishedTime?: string;
  authorName?: string;
}

const { title, description, image, canonicalUrl, ogType = 'website', publishedTime, authorName } = Astro.props;
const canonicalURL = canonicalUrl ?? new URL(Astro.url.pathname, Astro.site).href;
const socialImage = image ?? `${Astro.site}og-default.jpg`;
const fullTitle = title === 'HUGE Magazine' ? title : `${title} | HUGE Magazine`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <!-- Google Fonts: Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap" rel="stylesheet" />

  <!-- Primary Meta -->
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle} />
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph -->
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={socialImage} />
  <meta property="og:site_name" content="HUGE Magazine" />
  {publishedTime && <meta property="article:published_time" content={publishedTime} />}
  {authorName && <meta property="article:author" content={authorName} />}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={socialImage} />

  <!-- Feeds -->
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="alternate" type="application/rss+xml" title="HUGE Magazine" href="/rss.xml" />

  <!-- data.disco Analytics (Umami) -->
  <script defer src="https://data.discoverability.co/script.js" data-website-id="57d5446e-154e-4e2f-b973-a2539c21269f"></script>

  <slot name="head" />
</head>
<body>
  <slot />
</body>
</html>
