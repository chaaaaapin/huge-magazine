---
const currentYear = new Date().getFullYear();

const categories = [
  { name: 'Artificial Intelligence', slug: 'artificial-intelligence' },
  { name: 'Developer Tools', slug: 'developer-tools' },
  { name: 'Design & Creative', slug: 'design-tools' },
  { name: 'Productivity', slug: 'productivity' },
  { name: 'Marketing', slug: 'marketing' },
  { name: 'Sales & CRM', slug: 'sales' },
  { name: 'Analytics', slug: 'analytics' },
  { name: 'SaaS & B2B', slug: 'saas' },
  { name: 'Finance & Fintech', slug: 'finance' },
  { name: 'Health & Wellness', slug: 'health-wellness' },
  { name: 'Education', slug: 'education' },
  { name: 'No-code Tools', slug: 'no-code' },
  { name: 'Mobile Apps', slug: 'mobile' },
  { name: 'Browser Extensions', slug: 'browser-extensions' },
  { name: 'Open Source', slug: 'open-source' },
  { name: 'Security & Privacy', slug: 'security' },
  { name: 'Social & Community', slug: 'social' },
  { name: 'E-commerce', slug: 'ecommerce' },
  { name: 'Web3 & Crypto', slug: 'web3' },
  { name: 'Infrastructure', slug: 'infrastructure' },
];
---

<footer class="site-footer">
  <div class="container footer-body">

    <!-- Col 1: Brand -->
    <div class="footer-brand">
      <div class="footer-logo-wrap">
        <div class="logo-stack">
          <span class="logo-this-is" style="color: rgba(184,232,197,0.7)">This Is</span>
          <span class="logo-huge" style="color: var(--footer-text)">HUGE</span>
        </div>
      </div>
      <p class="footer-tagline">Daily startup features from Product Hunt. We write features, not press releases.</p>
      <div class="footer-links">
        <a href="/about">About</a>
        <a href="mailto:team@hugemagazine.com">Contact</a>
        <a href="/rss.xml">RSS</a>
      </div>
      <a href="mailto:team@hugemagazine.com" class="footer-email">team@hugemagazine.com</a>
    </div>

    <!-- Col 2: Categories -->
    <div class="footer-cats">
      <h3 class="footer-section-label">Categories</h3>
      <ul class="footer-cat-list">
        {categories.map(cat => (
          <li>
            <a href={`/category/${cat.slug}`}>{cat.name}</a>
          </li>
        ))}
      </ul>
    </div>

  </div>

  <div class="footer-bottom">
    <div class="container footer-bottom-inner">
      <span>&copy; {currentYear} HUGE Magazine</span>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--footer-bg);
    color: var(--footer-text);
    margin-top: 5rem;
  }

  .footer-body {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    padding-top: 3rem;
    padding-bottom: 2.5rem;
  }

  /* ── Brand col ── */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-tagline {
    font-size: 0.82rem;
    line-height: 1.55;
    color: rgba(184, 232, 197, 0.6);
    max-width: 22ch;
  }

  .footer-links {
    display: flex;
    gap: 1.25rem;
  }

  .footer-links a {
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--footer-text);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.15s;
  }

  .footer-links a:hover {
    opacity: 1;
    color: var(--accent);
  }

  .footer-email {
    font-size: 0.78rem;
    color: var(--accent);
    text-decoration: none;
    letter-spacing: 0.01em;
    opacity: 0.85;
    transition: opacity 0.15s;
  }

  .footer-email:hover {
    opacity: 1;
  }

  /* ── Categories col ── */
  .footer-cats {
    padding-top: 0.2rem;
  }

  .footer-section-label {
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .footer-cat-list {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.4rem 1rem;
  }

  .footer-cat-list li a {
    font-size: 0.78rem;
    color: rgba(184, 232, 197, 0.55);
    text-decoration: none;
    transition: color 0.15s;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }

  .footer-cat-list li a:hover {
    color: var(--accent);
  }

  /* ── Bottom bar ── */
  .footer-bottom {
    border-top: 1px solid rgba(184, 232, 197, 0.1);
    padding: 1rem 0;
  }

  .footer-bottom-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.7rem;
    color: rgba(184, 232, 197, 0.3);
    letter-spacing: 0.03em;
  }

  /* ── Mobile ── */
  @media (max-width: 768px) {
    .footer-body {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-cat-list {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom-inner {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>
