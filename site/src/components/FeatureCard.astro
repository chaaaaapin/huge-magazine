---
import { topicCategorySlug } from '../lib/topicMap';

interface Props {
  feature: {
    slug: string;
    data: {
      title: string;
      ph_rank: number;
      ph_votes: number;
      ph_comments: number;
      logo: string;
      ph_slug: string;
      tagline: string;
      excerpt: string;
      topics: string[];
    };
  };
}

const { feature } = Astro.props;
const { data } = feature;
---

<article class="feature-card card">
  <div class="card-body">
    <div class="card-header">
      <div class="card-logo-wrap">
        <img
          src={data.logo}
          alt={data.ph_slug}
          width="48"
          height="48"
          class="card-logo"
          loading="lazy"
        />
      </div>
      <div class="card-header-meta">
        <p class="card-product-name">{data.ph_slug}</p>
      </div>
    </div>

    <h3 class="card-title">
      <a href={`/feature/${data.ph_slug}`}>{data.title}</a>
    </h3>

    <p class="card-excerpt">{data.excerpt}</p>

    <div class="card-footer">
      <div class="card-meta">
        <div class="tags">
          {data.topics.slice(0, 2).map(t => {
            const cat = topicCategorySlug(t);
            return cat
              ? <a href={`/category/${cat}`} class="tag tag-link">{t}</a>
              : <span class="tag">{t}</span>;
          })}
        </div>
      </div>
      <a href={`/feature/${data.ph_slug}`} class="read-link">Read â†’</a>
    </div>
  </div>
</article>

<style>
  .feature-card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .card-body {
    padding: 1.4rem 1.5rem 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    flex: 1;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.85rem;
  }

  .card-logo-wrap {
    flex-shrink: 0;
  }

  .card-logo {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    object-fit: cover;
    border: 1px solid var(--border);
  }

  .card-header-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .card-product-name {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    color: var(--text-secondary);
    margin: 0;
  }

  .card-title {
    font-size: 1.08rem;
    font-weight: 700;
    letter-spacing: -0.01em;
    line-height: 1.3;
    margin: 0;
  }

  .card-title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.15s;
  }

  .card-title a:hover {
    color: var(--accent);
  }

  .card-excerpt {
    font-size: 0.87rem;
    color: var(--text-secondary);
    line-height: 1.55;
    margin: 0;
    /* Two-line clamp */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    margin-top: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-top: 0.9rem;
    border-top: 1px solid var(--border);
  }

  .card-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .card-body {
      padding: 1.1rem 1.1rem 1rem;
    }
  }
</style>
