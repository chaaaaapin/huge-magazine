---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  image?: string;
  href: string;
  category?: string;
}

const { title, description, pubDate, image, href, category } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="article-card">
  <a href={href} class="card-link">
    {image && (
      <div class="card-image">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}
    <div class="card-content">
      {category && <span class="card-category">{category}</span>}
      <h3 class="card-title">{title}</h3>
      <p class="card-description">{description}</p>
      <time class="card-date" datetime={pubDate.toISOString()}>
        {formattedDate}
      </time>
    </div>
  </a>
</article>

<style>
  .article-card {
    background: var(--color-huge-white);
    border: 2px solid rgba(13, 13, 13, 0.08);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .article-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-electric-blue), var(--color-deep-purple));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .article-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(13, 13, 13, 0.15);
    border-color: rgba(13, 13, 13, 0.15);
  }

  .article-card:hover::before {
    opacity: 1;
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(0, 102, 255, 0.05), rgba(91, 33, 182, 0.05));
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .article-card:hover .card-image img {
    transform: scale(1.08);
  }

  .card-content {
    padding: var(--space-lg);
  }

  .card-category {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-sm);
  }

  /* Category-specific colors */
  .card-category {
    background: linear-gradient(135deg, var(--color-electric-blue), var(--color-cyan));
    color: white;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 800;
    line-height: 1.25;
    margin-bottom: var(--space-sm);
    color: var(--color-huge-black);
    letter-spacing: -0.02em;
  }

  .card-description {
    color: rgba(13, 13, 13, 0.7);
    line-height: 1.6;
    margin-bottom: var(--space-sm);
    font-size: 0.95rem;
  }

  .card-date {
    display: block;
    font-size: 0.8rem;
    color: rgba(13, 13, 13, 0.5);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .card-content {
      padding: var(--space-md);
    }

    .card-title {
      font-size: 1.25rem;
    }
  }
</style>
